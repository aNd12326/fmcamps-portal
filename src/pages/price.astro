---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Layout from "../layouts/Layout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("layout.Price.title")}>
    <section class="pt-36 pb-24 py-24 leading-7 min-h-screen flex items-center">
        <div
            class="box-border px-4 mx-auto border-solid sm:px-6 md:px-6 lg:px-8 max-w-7xl"
        >
            <div
                class="flex flex-col items-center leading-7 text-center text-gray-900 border-0 border-gray-200"
            >
                <h2
                    class="box-border m-0 text-3xl font-semibold leading-tight tracking-tight border-solid sm:text-4xl md:text-5xl"
                >
                    Planes simples y transparentes
                </h2>
                <p class="box-border mt-2 text-xl border-solid sm:text-2xl">
                    Precios para adaptarse a las necesidades de cualquier tamaño
                    de empresa.
                </p>
            </div>
            <div
                class="grid grid-cols-1 gap-4 mt-4 leading-7 text-gray-900 border-0 border-gray-200 sm:mt-6 sm:gap-6 md:mt-8 md:gap-0 lg:grid-cols-3"
            >
                <!-- Precio 1 -->
                <div
                    class="flex flex-col items-center max-w-md p-4 mx-auto my-0 border border-solid rounded-lg lg:-mr-3 sm:my-0 sm:p-6 md:my-8 md:p-8"
                >
                    <h3
                        class="m-0 text-2xl font-semibold leading-tight tracking-tight text-black border-0 border-gray-200 sm:text-3xl md:text-4xl"
                    >
                        Starter
                    </h3>
                    <div
                        class="flex items-end mt-6 leading-7 text-gray-900 border-0 border-gray-200"
                    >
                        <p
                            class="box-border m-0 text-6xl font-semibold leading-none border-solid"
                        >
                            $5
                        </p>
                        <p
                            class="box-border m-0 border-solid"
                            style="border-image: initial;"
                        >
                            / mes
                        </p>
                    </div>
                    <p
                        class="mt-6 mb-5 text-base leading-normal text-left text-gray-900 border-0 border-gray-200"
                    >
                        Ideal para Pymes.
                    </p>
                    <ul
                        class="flex-1 p-0 mt-4 ml-5 leading-7 text-gray-900 border-0 border-gray-200"
                    >
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Informes Automatizados
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Procesamiento Rápido
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Personalización
                        </li>
                    </ul>
                    <button
                        class="inline-flex justify-center w-full px-4 py-3 mt-8 font-sans text-sm leading-none text-center text-blue-600 no-underline bg-transparent border border-blue-600 rounded-md cursor-pointer hover:bg-blue-700 hover:border-blue-700 hover:text-white focus-within:bg-blue-700 focus-within:border-blue-700 focus-within:text-white sm:text-base md:text-lg"
                    >
                        Seleccionar Plan
                    </button>
                </div>
                <!-- Precio 2 -->
                <div
                    class="flex flex-col items-center max-w-md p-4 mx-auto my-0 border-4 border-blue-600 border-solid rounded-lg sm:p-6 md:px-8 md:py-16"
                >
                    <h3
                        class="m-0 text-2xl font-semibold leading-tight tracking-tight border-0 border-gray-200 sm:text-3xl md:text-4xl"
                    >
                        Estándar
                    </h3>
                    <div
                        class="flex items-end mt-6 leading-7 border-0 border-gray-200"
                    >
                        <p
                            class="box-border m-0 text-6xl font-semibold leading-none border-solid"
                        >
                            $15
                        </p>
                        <p
                            class="box-border m-0 border-solid"
                            style="border-image: initial;"
                        >
                            / mes
                        </p>
                    </div>
                    <p
                        class="mt-6 mb-5 text-base leading-normal text-left border-0 border-gray-200"
                    >
                        Ideal para medianas y grandes empresas
                    </p>
                    <ul
                        class="flex-1 p-0 mt-4 leading-7 border-0 border-gray-200"
                    >
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Todo en Starter
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            100 Construcciones
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Informes de Progreso
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Soporte Premium
                        </li>
                    </ul>
                    <button
                        class="inline-flex justify-center w-full px-4 py-3 mt-8 font-sans text-sm leading-none text-center no-underline bg-blue-600 border rounded-md cursor-pointer hover:bg-blue-700 hover:border-blue-700 hover:text-white focus-within:bg-blue-700 focus-within:border-blue-700 focus-within:text-white sm:text-base md:text-lg"
                    >
                        Seleccionar
                    </button>
                </div>
                <!-- Precio 3 -->
                <div
                    class="flex flex-col items-center max-w-md p-4 mx-auto my-0 border border-solid rounded-lg lg:-ml-3 sm:my-0 sm:p-6 md:my-8 md:p-8"
                >
                    <h3
                        class="m-0 text-2xl font-semibold leading-tight tracking-tight border-0 border-gray-200 sm:text-3xl md:text-4xl"
                    >
                        Plus
                    </h3>
                    <div
                        class="flex items-end mt-6 leading-7 border-0 border-gray-200"
                    >
                        <p
                            class="box-border m-0 text-6xl font-semibold leading-none border-solid"
                        >
                            $25
                        </p>
                        <p
                            class="box-border m-0 border-solid"
                            style="border-image: initial;"
                        >
                            / mes
                        </p>
                    </div>
                    <p
                        class="mt-6 mb-5 text-base leading-normal text-left border-0 border-gray-200"
                    >
                        Ideal para corporaciones y empresas especializadas en
                        brindar servicios de FM.
                    </p>
                    <ul
                        class="flex-1 p-0 mt-4 leading-7 border-0 border-gray-200"
                    >
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Todo en Estándar
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Construcciones Ilimitadas
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Análisis Avanzado
                        </li>
                        <li
                            class="items-center block w-full mb-2 ml-5 font-semibold text-left border-solid"
                        >
                            <svg
                                class="w-5 h-5 mr-2 font-semibold leading-7 text-blue-600 sm:h-5 sm:w-5 md:h-6 md:w-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path d="M5 13l4 4L19 7"></path>
                            </svg>
                            Evaluaciones de Empresa
                        </li>
                    </ul>
                    <button
                        class="inline-flex justify-center w-full px-4 py-3 mt-8 font-sans text-sm leading-none text-center text-blue-600 no-underline bg-transparent border border-blue-600 rounded-md cursor-pointer hover:bg-blue-700 hover:border-blue-700 hover:text-white focus-within:bg-blue-700 focus-within:border-blue-700 focus-within:text-white sm:text-base md:text-lg"
                    >
                        Seleccionar Plan
                    </button>
                </div>
            </div>
        </div>
    </section>
</Layout>
