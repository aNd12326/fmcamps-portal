<style>
	.hero {
		background-image: linear-gradient(
				rgba(0, 0, 0, 0.7),
				rgba(0, 0.8, 0, 0)
			),
			url("../assets/bgheader.jpg");
		
		animation: movimiento 10s infinite linear alternate;
	}

	@keyframes movimiento {
		from {
			background-position: calc(55%);
		}
		to {
			background-position: top right calc(20%);
		}
	}
</style>
